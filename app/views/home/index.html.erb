<div class="bg-gray-800 text-white text-center py-20">
  <h1 class="text-5x1 font-bold mb-4">FoodApp</h1>
  <p class="text-xl mb-8">Tudo que vocÃª precisa para seu lanche</p>
  <%= link_to "Compre Agora", root_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded"%>
</div>
<div class="flex flex-wrap justify-center mt-8 items-center gap-10">
  <% @main_categories.each do |category| %>
    <%= link_to category_path(category) do %>
      <div class="flex flex-col mb-4">
        <h2 class="text-gray-800 font-medium text-lg text-center mb-6">
          <%= category.name %>
        </h2>
        <%= category.image.present? ? image_tag(category.image.variant(:medium), class:"max-w-lg") : image_tag("http://via.placeholder/300")%>
      </div>
    <% end %>
  <% end %>
</div>
<div class="bg-gray-100 py-20 my-10">
  <div class="container mx-auto px-6">
    <h2 class="text-4x1 font-bold text-center text-gray-800 mb-8">
      Depoimentos
    </h2>
    <div class="flex flex-wrap">
      <%= link_to "Deixe um Depoimento", adicionar_depoimento_path, class: "text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-8" %>
    </div>
    <div class="flex flex-wrap">
      <% @depoimentos.each do |depoimento| %>
        <div class="w-full md:w-1/3 px-2 mb-4">
          <div class="bg-gray-100 rounded shadow py-4 px-4">
            <p class="text-gray-800 text-base mb-4"><%= depoimento.depoiment %></p>
            <p class="text-gray-500 text-xs">- <%= depoimento.name %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

